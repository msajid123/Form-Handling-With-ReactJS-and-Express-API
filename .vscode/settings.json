{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "editor.formatOnPaste": false,
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": false
  },
  "files.exclude": {
    "package-lock.json": true,
    ".eslintrc.json": true,
    ".prettierrc": true,
    "readme.md": true,
    "public": true,
    ".vscode": true
  }
}